            <class name="Tests.GuestTests.OrderTests.DeliveryDetailsTest"></class>
            <class name="Tests.GuestTests.OrderTests.CardPaymentTest"></class>
            <class name="Tests.GuestTests.OrderTests.PlaceOrderTest"></class>
        </classes>
